@model SolutionDTO

@{
    ViewData["Title"] = "Edit Solution";
}

<h1>Edit Solution</h1>

<h4>Solution</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="SolutionFile" class="control-label"></label>
                <input asp-for="SolutionFile" class="form-control" />
                <span asp-validation-for="SolutionFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" for="exampleTextarea" class="form-label mt-4">Notes</label>
                <textarea asp-for="Notes" class="form-control" id="exampleTextarea" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
